{
  "name": "torque-js",
  "version": "0.0.1",
  "description": "Add some Torque to your development cycle",
  "author": "sagitarious12",
  "license": "",
  "repository": "sagitarious12/torque-js",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.tsx",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "microbundle-crl --no-compress --format modern,cjs",
    "start": "microbundle-crl watch --no-compress --format modern,cjs",
    "test": "jest",
    "predeploy": "cd example && npm install && npm run build",
    "deploy": "gh-pages -d example/build",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "cypress": "npm-run-all -p storybook cypress:open",
    "cypress:open": "wait-on http://localhost:6006 && cypress open"
  },
  "peerDependencies": {
    "react": "^16.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.8",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@storybook/addon-actions": "^6.4.13",
    "@storybook/addon-essentials": "^6.4.13",
    "@storybook/addon-links": "^6.4.13",
    "@storybook/react": "^6.4.13",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^27.4.0",
    "@types/node": "^12.12.38",
    "@types/react": "^16.9.27",
    "@types/react-dom": "^16.9.7",
    "@types/react-test-renderer": "^17.0.1",
    "@types/styled-components": "^5.1.20",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^27.4.6",
    "babel-loader": "^8.2.3",
    "cross-env": "^7.0.2",
    "cypress": "^9.3.0",
    "jest": "^27.4.7",
    "jest-styled-components": "^6.3.4",
    "microbundle-crl": "^0.13.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "^3.4.1",
    "react-test-renderer": "^17.0.2",
    "ts-jest": "^27.1.3",
    "typescript": "^3.7.5",
    "wait-on": "^6.0.0"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "styled-components": "^4.4.1"
  }
}
